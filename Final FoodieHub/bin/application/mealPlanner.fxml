<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.MealPlannerController"
      style="-fx-padding: 20; -fx-background-color: #FFF3E0;">

    <Label text="🗓️ Select a date to plan your meal:" style="-fx-font-size: 16px;" />
    <DatePicker fx:id="datePicker" />
    <Button text="✅ Save Plan" onAction="#handleSavePlan"
            style="-fx-background-color: #66BB6A; -fx-text-fill: white;" />
</VBox>
