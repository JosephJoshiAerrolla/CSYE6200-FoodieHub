<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="application.NewUserController"
            prefHeight="600.0" prefWidth="800.0" 
            style="-fx-background-color: #FFEFBA;">
   
   <children>

	<ImageView fitWidth="1600.0" fitHeight="800.0"
		preserveRatio="false" AnchorPane.topAnchor="0.0"
		AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0" opacity="0.2">
		<image>
			<Image url="@../assests/foodImage.jpg" />
		</image>
	</ImageView>
      

      <VBox fx:id="registerBox" spacing="15" alignment="CENTER" maxWidth="400.0" maxHeight="500.0"
            AnchorPane.topAnchor="150.0" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="450.0" AnchorPane.rightAnchor="450.0"
            style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; 
                   -fx-padding: 30; -fx-border-color: #FFA500; -fx-border-radius: 20; -fx-border-width: 2;">
         
         <effect>
            <DropShadow radius="15" spread="0.2" color="rgba(0,0,0,0.3)" />
         </effect>

         <!-- Register Title -->
         <Label fx:id="titleLabel" text="Create Your Account" textFill="#D35400">
            <font>
               <Font name="Arial Bold" size="24.0"/>
            </font>
         </Label>

         <!-- Username -->
         <TextField fx:id="firstNames" promptText="Enter Username" maxWidth="300.0"
                    style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <TextField fx:id="lastNames" promptText="Enter Username" maxWidth="300.0"
                    style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <!-- Password -->
         <PasswordField fx:id="passwords" promptText="Enter Password" maxWidth="300.0"
                        style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <PasswordField fx:id="confirmPasswords" promptText="Enter Password" maxWidth="300.0"
                        style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <!-- Email -->
         <TextField fx:id="emailField" promptText="Enter Email (Gmail only)" maxWidth="300.0"
                    style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <TextField fx:id="phoneNumber" promptText="Enter Phone Number" maxWidth="300.0"
                    style="-fx-background-color: #FFF0D9; -fx-border-radius: 10; -fx-padding: 8;" />

         <!-- Register Button -->
         <Button fx:id="btn_register" onAction="#handleSignup" maxWidth="300.0"
                 style="-fx-background-color: #D35400; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"
                 text="Register"/>

         <!-- Error Message -->
         <Label fx:id="error_box" textFill="red" style="-fx-font-size: 14px;" />
      </VBox>

   </children>
</AnchorPane>
